<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/colorPrimaryDark" android:startColor="@color/colorPrimaryDark" />
            <corners android:radius="20dp" />
            <stroke android:width="4dp" android:color="@android:color/white" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" />
            <corners android:radius="20dp" />
            <stroke android:width="4dp" android:color="@android:color/white" />
        </shape>

    </item>
</selector>